<!DOCTYPE html>
<html>
  <head>
    <title>NewTimeMachine</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <% if content_for? :head_template %>
      <%= yield :head_template %>
    <% else %>
      <%= stylesheet_link_tag    'application', media: 'all' %>
    <% end %>
    <%= stylesheet_link_tag 'weui-rails', media: 'all' %>
    
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if content_for? :template %>
			<div class="container">
				<%= yield %>    
			</div>
    <% else %>
			<%= yield %>
    <% end %>
  </body>
</html>

